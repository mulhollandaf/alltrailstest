<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="restaurant"
            type="com.test.alltrailstest.RestaurantInfo"/>
        <variable
            name="viewModel"
            type="com.test.alltrailstest.MainViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/listItemLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:onClick="@{()->viewModel.itemClicked(restaurant)}"
        >

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{restaurant.name}"
            tools:text="Restaurant Name"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@{restaurant.rating.toString()}"
            app:layout_constraintStart_toStartOf="@id/nameTextView"
            app:layout_constraintTop_toBottomOf="@id/nameTextView"
            tools:text="3.5"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@{restaurant.priceLevel.toString()}"
            app:layout_constraintStart_toEndOf="@id/ratingTextView"
            app:layout_constraintTop_toBottomOf="@id/nameTextView"
            tools:text="1"/>
        <TextView
            android:id="@+id/vicinityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/ratingTextView"
            app:layout_constraintStart_toStartOf="@id/ratingTextView"
            android:text="@{restaurant.vicinity}"
            tools:text="1234 Main Street"
            android:visibility="@{restaurant.showExpanded}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>